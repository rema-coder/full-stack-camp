namespace c__project
{
    internal class Program
    {
        static bool adds(string x)
        {
            int c = 0;
            x= x.ToLower();
            foreach (char y in x)
            {
                char n = 'z';
                if (y == n) { c++; }
                
            }
            if (c>=2&&c<=4)
            {
                return true;
                
            }
            else
            {
                return false;
            }
            
        }
        static void Main(string[] args)
        {
            Console.WriteLine("enter a string        ");
           string x = Console.ReadLine();
            Console.WriteLine(adds(x));
         
        }
    }
}
