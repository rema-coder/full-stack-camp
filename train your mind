            if (z==y)
            {
                return x.Remove(1, 2);
            }
            else
            {
                return x;
            }
        }
        static void Main(string[] args)
        {
            Console.WriteLine("enter a string        ");
            string x = Console.ReadLine();
            Console.WriteLine(adds(x));
         
