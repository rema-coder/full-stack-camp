{
    internal class Program
    {
        static string adds(int x,int y,int z) {
            
            if (x >= 65)
            {
                if (y >= 55)
                {
                    if (z >= 50)
                    {
                        if (x + y + z >= 180)
                        {
                            return "The candidate is eligible for admission.";
                        }
                        else
                            return "The candidate is not eligible for admission.";
                    }
                    return "you fail in chemistry";
                }
                return ("you fail in phs");

            }
            return ("you fail in math");

        }
        static void Main(string[] args)
        {
            Console.WriteLine("enter math mark");
           // string x = Console.ReadLine();
            int x =int.Parse(Console.ReadLine());
            Console.WriteLine("enter phy mark");
            int y =int.Parse(Console.ReadLine());
