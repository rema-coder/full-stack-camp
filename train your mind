namespace c__project
{
    internal class Program
    {
        static string adds(int x,int y) {
            
            if (x > 0&&y>0)
            {
                return ("the cordinate point("+x+","+y+")lies in the first quadrant");
            }
            else if (x<0&&y>0)
            {
                return ("the cordinate point(" + x + "," + y + ")lies in the second quadrant");
            }
            else if (x <0 && y<0)
            {
                return ("the cordinate point(" + x + "," + y + ")lies in the third quadrant");
            }
            return ("the cordinate point(" + x + "," + y + ")lies in the forth quadrant");

        }
        static void Main(string[] args)
        {
            Console.WriteLine("enter a number");
           // string x = Console.ReadLine();
            int x =int.Parse(Console.ReadLine());
            Console.WriteLine("enter a number");
            int y =int.Parse(Console.ReadLine());
            //Console.WriteLine("another one");
            //int z =int.Parse(Console.ReadLine());
            Console.WriteLine(adds(x,y));
         
        }
    }
}
