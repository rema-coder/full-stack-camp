            {
                 return "Very Cold weather";
            }
            else if (x > 10 && x <= 20)
            {
                 return "Cold weather";
            }
            else if (x > 20 && x <= 30)
            {
                 return "Normal in Temp";
            }
            else if (x > 30 && x <= 40)
            {
                 return "Its Hot";
            }
            else // temperature > 40
            {
                 return"Its Very Hot";
            }

        }
