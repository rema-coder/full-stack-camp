namespace c__project
{
    internal class Program
    {
        static string adds(string x)
        {
            //check if the string is less than 3 char if its true will take the hole string and if its not do the condistion
            // the substring is used to extract the first three letter
            string first3char = x.Length <3 ? x: x.Substring(0, 3);
            return ( first3char + x +first3char);
        }
        static void Main(string[] args)
        {
            Console.Write("enter a string");
            string x  =Console.ReadLine();
          
            Console.WriteLine(adds(x));
         
        }
    }

