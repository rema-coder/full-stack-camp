{
    internal class Program
    {
        static string addls(string x)
        {

            char lastchar = x[x.Length - 1];
    
            return lastchar + x + lastchar;
        }
        static void Main(string[] args)
        {
            Console.Write("enter a string");
            string x = Console.ReadLine();
            string y=addls( x);
            Console.WriteLine(y);
         
        }
    }
